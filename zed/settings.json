{
  "assistant": {
    "version": "2",
    "default_open_ai_model": null,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    }
  },
  "ui_font_size": 12,
  "ui_font_family": "JetBrains Mono",
  "buffer_font_size": 12,
  "buffer_font_family": "JetBrains Mono",
  "soft_wrap": "editor_width",
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Frappé",
    "dark": "Catppuccin Frappé"
  }
}
